<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="Gestión de información"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#242424"
        android:textAlignment="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Empresas"
            android:fontFamily="sans-serif-condensed"
            android:textSize="22dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnEmpresas"/>
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Clientes"
            android:fontFamily="sans-serif-condensed"
            android:textSize="22dp"
            android:id="@+id/btnClientes"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Almacenes"
            android:fontFamily="sans-serif-condensed"
            android:textSize="22dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnAlmacenes"/>
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Compras"
            android:fontFamily="sans-serif-condensed"
            android:textSize="22dp"
            android:id="@+id/btnCompras"/>
    </LinearLayout>

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Detalles de compra"
        android:fontFamily="sans-serif-condensed"
        android:textSize="22dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btnDetalleC"/>
</LinearLayout>